<div class="contener">
  <div class="main">
    <%= form_with model: @schedual do |f| %>
    <table class="main-table">
       <tr>
         <th><%= f.label :title ,"タイトル(必須)" %></th>
        <td><%= f.text_field :title,placeholder: "20文字以内", class:"input-text" %></td>
       </tr>
 
       <tr>
         <th><%= f.label :start_date ,"開始日(必須)" %></th>
         <td><%= f.text_field :start_date,placeholder: "YYYY / MM / DD", class:"input-text" %></td>
        </tr>
 
        <tr>
          <th><%= f.label :end_date ,"終了日(必須)" %></th>
          <td><%= f.text_field :end_date,placeholder: "YYYY / MM / DD", class:"input-text" %></td>
       </tr>

        <tr>
        <th> <%= f.label :ffull_day, "終日" %></th>
        <td><%= f.check_box :full_day %></td>
        </tr>

        <tr>
         <th><%= f.label :memo ,"メモ" %></th>
          <td><%= f.text_area :memo,placeholder: "500文字以内" ,class: "text-area" %></td>
        </tr>
      </table>
 
    <div class="main-submit">
      <%= f.submit "編集する"%>
    </div>
    <% end %>
 </div>
 <div class="back">
  <%= link_to "一覧に戻る", root_path %>
 </div>
</div>